pkgname=epiphyte-syspack-update
pkgrel=1
pkgdesc="epiphyte system packing update handler"
url="https://github.com/epiphyte/servers"
license=('MIT')
makedepends=('epiphyte-servers')
depends=('git')
source=("git+$url")
sha512sums=('SKIP')

package() {
    cd ${srcdir}/servers
    install -Dm 644 hooks/update-syspack.hook $pkgdir/usr/share/libalpm/hooks/update-epiphyte-syspack.hook
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

